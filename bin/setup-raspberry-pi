#!/bin/bash
# Setup script for Raspberry Pi
# Installs system dependencies required for the project

echo "Installing system dependencies for Pillow and other packages..."

sudo apt update
sudo apt install -y \
    python3-dev \
    python3-pip \
    python3-venv \
    libjpeg-dev \
    zlib1g-dev \
    libfreetype6-dev \
    liblcms2-dev \
    libopenjp2-7 \
    libtiff5 \
    libwebp-dev

echo ""
echo "System dependencies installed!"
echo "Now run: ./bin/update-display to install Python packages and update the display"
